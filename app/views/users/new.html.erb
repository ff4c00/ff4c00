<% provide(:title, '注册')%>
<h1>注册</h1>
<div class='col-md-6 col-md-offset-3'>
  <%= form_for(@user) do |f| %>
    <%= f.label :'名称' %>
    <%= f.text_field :name %>
    <%= f.label :'邮箱' %>
    <%= f.email_field :email %>
    <%= f.label :'密码' %>
    <%= f.password_field :password %>
    <%= f.label :'确认密码' %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit '提交'%>
  <% end %>
</div>