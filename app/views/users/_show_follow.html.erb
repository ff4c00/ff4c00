<% provide(:title, @title)%>
<div class='row'>
	<aside class='col-md-4'>
		<section class='user_info'>
			<%= gravatar_for @user %>
			<h1><%= @user.name %></h1>
			<span><%= link_to '详情', user_path(@user) %></span>
			<span>
				<b> 博客:</b>
				<%= @user.microposts.count %>
			</span>
		</section>

		<section class='stats'>
			<%= render 'shard/stats' %>
			<% if @users.any? %>
				<div class='user_avatars'>
					<% @users.each do |user| %>
						<%= link_to gravatar_for(user: user, size: 30) , user %>
					<% end %>
				</div>
			<% end %>
		</section>
	</aside>

	<div class='col-md-8'>
		<h3><%= @title %></h3>
		<% if @users.any? %>
			<ul class='users follow'>
				<%= render @users %>
			</ul>
			<%= paginate @users %>
		<% end %>
	</div>
</div>
